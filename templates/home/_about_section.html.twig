            if (codeBlock) {
                navigator.clipboard.writeText(codeBlock.innerText).then(() => {
                    // optional: change icon or give feedback
                    button.innerHTML = '<i class="fas fa-check"></i>';
                    setTimeout(() => {
                        button.innerHTML = '<i class="fas fa-copy"></i>';
                    }, 1500);
                });
            }
        });
    });
